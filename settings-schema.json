    },
    "fan-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "fan-enabled",
        "tooltip": "Common placeholders: \n %value \t general fan value \n %sensor(digit) \t specific rotations of one fan"
    },
    "fan-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
