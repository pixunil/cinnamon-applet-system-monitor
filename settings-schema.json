        "options": {
            "Line": "line",
            "Area": "area"
        },
        "description": "Appearance of history graphs"
    },
    "mem-panel-label": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Percent": 0
        },
        "description": "Label in the panel"
    },
    "mem-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Bar": 0,
            "History": 1
        },
        "description": "Graph in the panel"
    },
    "mem-panel-mode": {
        "type": "combobox",
        "default": 0,
        "options": {
            "only Memory": 0,
            "Memory and Swap": 2
        },
        "description": "Mode of graph",
        "indent": true
    },
    "mem-panel-width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "units": "px",
        "description": "Width of graph",
        "indent": true
    },
