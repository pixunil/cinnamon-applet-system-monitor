    "network-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "network-enabled",
        "tooltip": "Common placeholders: \n %up \t up usage \n %down \t down usage"
    },
    "network-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
