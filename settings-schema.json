        "description": "Width of graph",
        "indent": true,
        "dependency": "thermal-enabled"
    },
    "thermal-warning": {
        "type": "checkbox",
        "default": false,
        "description": "Enabled",
        "dependency": "thermal-enabled"
    },
    "thermal-warning-value": {
        "type": "spinbutton",
        "min": 25,
        "max": 200,
        "default": 50,
        "step": 0.5,
        "units": "℃ / ℉",
        "description": "Trigger temperature",
        "indent": true,
        "dependency": "thermal-warning"
    },
    "thermal-warning-time": {
        "type": "spinbutton",
        "min": 1,
        "max": 40,
        "default": 5,
        "step": 1,
        "description": "Time",
        "indent": true,
        "dependency": "thermal-warning"
    },


    "fan-enabled": {
        "type": "checkbox",
