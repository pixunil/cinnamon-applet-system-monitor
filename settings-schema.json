        },
        "description": "Graph in the panel",
        "dependency": "network-enabled"
    },
    "network-panel-width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "description": "Width of graph",
        "indent": true,
        "dependency": "network-enabled"
    },


    "thermal-enabled": {
        "type": "checkbox",
        "default": true,
        "description": "Enabled"
    },
    "thermal-color-thermal": {
        "type": "colorchooser",
        "default": "rgba(238, 80, 29, 1)",
        "description": "Thermal",
        "dependency": "thermal-enabled"
    },
    "thermal-color-disk": {
        "type": "colorchooser",
        "default": "rgba(179, 179, 45, 1)",
        "description": "Disk",
        "dependency": "thermal-enabled"
    },
    "thermal-mode": {
        "type": "combobox",
        "default": "avg",
        "options": {
            "Minimum": "min",
            "Average": "avg",
            "Maximum": "max"
        },
        "description": "General temperature",
        "dependency": "thermal-enabled"
    },
    "thermal-appearance": {
        "type": "combobox",
        "default": "area",
        "options": {
            "Line": "line",
            "Area": "area"
        },
        "description": "Appearance of history graphs",
        "dependency": "thermal-enabled"
    },
    "thermal-sensors": {
        "type": "list",
        "description": "Sensors",
        "columns" : [{
            "id": "name",
            "type": "string",
            "title": "Name"
        }, {
            "id": "id",
            "type": "string",
            "title": "Identifier"
        }, {
            "id": "group",
            "type": "string",
            "title": "Group"
        }],
        "default" : []
    },
    "thermal-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "thermal-enabled",
        "tooltip": "Common placeholders: \n %value \t general temperature \n %sensor(digit) \t specific temperature of one sensor"
    },
    "thermal-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Bar": 0,
            "History": 1
        },
        "description": "Graph in the panel",
        "dependency": "thermal-enabled"
    },
    "thermal-panel-width": {
        "type": "spinbutton",
